<h3 class="text-primary"> Vista de Productos </h3>
<br>
{{#if products.length}}

<section class="productList">
            {{#each products}}
            <div class="card">
                <img src={{this.image}} alt={{this.title}} style="width:100%">
                <h1>{{this.title}}</h1>
                <p class="price">{{this.price}}</p>
                <p>description</p>
                <p><button>Add to Cart</button></p>
            </div>
            {{/each}}
</section>
{{else}}
    <h3 class="alert alert-danger">no se encontraron productos</h1>
{{/if}}
